import java.util.Scanner;
public class Main{
    public static int[] leftRotate(int arr[],int d){
    int n=arr.length;
    int rotated []=new int[n];
    d= d%n;
    for(int i=0;i<n;i++){
        rotated[i]=arr[(i+d)%n];
    }
    return rotated;
}
 public static int[] rightRotate(int arr[],int d){
    int n=arr.length;
    int rotated []=new int[n];
    d= d%n;
    for(int i=0;i<n;i++){
        rotated[(i+d)%n]=arr[i];
    }
    return rotated;
 }
public static void printArray(int arr[]){
    for(int num:arr){
        System.out.print(num+ " ");
    }
    System.out.println();
}
public static void main(String args[]){
    int arr[]={1,2,3,4,5,6,7};
    System.out.println("Original Array:");
    printArray(arr);
    int leftRotated[]=leftRotate(arr,3);
    System.out.println("Array after 3 left rotations:");
    printArray(leftRotated);
    int rightRotated[]=rightRotate(arr,3);
  System.out.println("Array after 3 right rotations:");
    printArray(rightRotated);
}
